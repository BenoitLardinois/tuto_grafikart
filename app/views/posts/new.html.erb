<!-- 1) Pour que le formulaire marche il faut créer une antitée (controller => new) -->
<%= form_for @post do |f| %>
  <div class="form-group">
    <label>Titre de l'article</label>
    <%= f.text_field :name, class: 'form-controller' %>
  </div>

  <div class="form-group">
    <label>Contenu de l'article</label>
    <%= f.text_area :content, class: 'form-controller' %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">Créer l'article</button>
  </div>
<% end %>

